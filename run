echo off;
clear; 

test=false;
build=false;
debug=false;

for var in "$@"; do
	echo $var
	if [ "$var" = "-t" ]; then   test=true; fi
	if [ "$var" = "-b" ]; then   build=true; fi
	if [ "$var" = "-dbg" ]; then debug=true; fi
done

echo $test 
echo $build
echo $debug

# run tests if asked
if ( $test ); then
	pushd .
		cd aug/test
		./run
	popd
	shift;
fi

if ( $build ); then
	# nuke build dir
	make clean;

	echo "Compiling aug libs..."
	pushd .
		cd aug/test/lib
		make clean;
		make
	popd 

	echo "Copying..."
	yes | cp -rf aug/test/lib/linux/. ./build

	pushd .
		echo "Compiling gfx lib..."
		cd gfx
		make clean;
		make
	popd 

	echo "Copying..."
	yes | cp -rf gfx/linux/. ./build

	# run demo
	echo "Compiling demo..."
	make; 

fi;

yes | cp -rf assets/. ./build

pushd .
	cd build; 
	if ($debug);then
		valgrind  --main-stacksize=1048576 --tool=memcheck \
			./aug_demo; 
		else 
			./aug_demo; 
	fi
popd
