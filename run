clear; 

if [ "$1" == "-t" ]; then

pushd .
cd aug/test
./run -all
popd
shift;
fi;

make clean;

echo "Compiling lib..."
cd aug/lib
make clean;
make
cd ../..

echo "Copying..."
yes | cp -rf aug/lib/linux/. ./build

echo "Compiling demo..."
make; 
cd build; 

if [ "$1" == "-d" ]; then
valgrind  --main-stacksize=1048576 --tool=memcheck \
	./aug_demo; 
else 
	./aug_demo; 

fi;

cd ..
